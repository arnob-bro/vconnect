@model VConnect.Models.DonationProvided

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Add Donation Provided";
}

<style>
    .form-container {
        max-width: 600px;
        margin: 40px auto;
        padding: 20px;
        background-color: #f2f2f2;
        border-radius: 8px;
        box-shadow: 0px 2px 6px rgba(0,0,0,0.1);
    }

        .form-container h2 {
            text-align: center;
            color: #0e0e53;
            margin-bottom: 20px;
        }

    .form-group {
        margin-bottom: 15px;
        display: flex;
        flex-direction: column;
    }

    label {
        font-weight: bold;
        margin-bottom: 5px;
        color: #22577a;
    }

    input[type="text"], input[type="number"], input[type="date"] {
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 1rem;
    }

    .submit-button {
        background-color: #0e0e53;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-weight: bold;
        transition: background-color 0.3s;
    }

        .submit-button:hover {
            background-color: #22577a;
        }

    .back-link {
        display: inline-block;
        margin-top: 10px;
        text-decoration: none;
        color: #ff8800;
    }

        .back-link:hover {
            text-decoration: underline;
        }
</style>

<div class="form-container">
    <h2>Add Donation Provided</h2>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label for="DonorName">Donor Name</label>
            <input asp-for="RecipientName" type="text" id="RecipientName" required />
            <span asp-validation-for="RecipientName" style="color:red;"></span>
        </div>

        <div class="form-group">
            <label for="Amount">Amount</label>
            <input asp-for="Amount" type="number" id="Amount" step="0.01" required />
            <span asp-validation-for="Amount" style="color:red;"></span>
        </div>
        <div class="form-group">
            <label for="Note">Note</label>
            <input asp-for="Note" type="text" id="Note" step="0.01" />
            <span asp-validation-for="Note" style="color:red;"></span>
        </div>

        <button type="submit" class="submit-button">Add Donation</button>
    </form>

    <a asp-action="Index" class="back-link">&larr; Back to list</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
