@model VConnect.Models.DonationStats

@{
    ViewData["Title"] = "Donations Provided";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    /* Header row */
    .header-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }

        .header-row h2 {
            color: #0e0e53; /* Navy Blue */
        }

    .add-button {
        background-color: #22577a; /* Teal Blue */
        color: #fff;
        text-decoration: none;
        padding: 8px 16px;
        border-radius: 6px;
        font-weight: bold;
        transition: background-color 0.3s;
    }

        .add-button:hover {
            background-color: #2a9d8f; /* Lighter teal/green hover */
        }

    /* Table styling */
    table {
        width: 100%;
        border-collapse: collapse;
        box-shadow: 0px 2px 6px rgba(0,0,0,0.1);
    }

    th, td {
        padding: 12px 10px;
        border: 1px solid #ddd;
        text-align: left;
    }

    th {
        background-color: #e7f3fe; /* Light Blue */
        color: #0e0e53;
    }

    tr:nth-child(even) {
        background-color: #f2f9f2; /* Very light green */
    }

    tr:hover {
        background-color: #d1f2d1; /* Light green highlight */
    }

    /* Action buttons */
    .action-button {
        padding: 5px 12px;
        border: none;
        border-radius: 5px;
        font-size: 0.9rem;
        color: #fff;
        text-decoration: none;
        cursor: pointer;
        margin-right: 5px;
        transition: background-color 0.3s;
    }

    .details-button {
        background-color: #2a9d8f; /* Teal green */
    }

        .details-button:hover {
            background-color: #1f7a6c;
        }

    .delete-button {
        background-color: #ff8800; /* Orange */
    }

        .delete-button:hover {
            background-color: #e67600;
        }

    /* Center message for empty table */
    .empty-message {
        text-align: center;
        font-style: italic;
        color: #555;
    }
</style>

<div class="container">
    <div class="header-row">
        <h2>Donations Provided</h2>
        <a href="@Url.Action("Create")" class="add-button">+ Add New</a>
    </div>

    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>Recipient Name</th>
                <th>Amount</th>
                <th>Provided At</th>
                <th>Note</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.AllDonationsProvided != null && Model.AllDonationsProvided.Any())
            {
                int index = 1;
                foreach (var donation in Model.AllDonationsProvided)
                {
                    <tr>
                        <td>@index</td>
                        <td>@donation.RecipientName</td>
                        <td>@donation.Amount</td>
                        <td>@donation.ProvidedAt.ToString("yyyy-MM-dd")</td>
                        <td>@donation.Note</td>
                        <td>
                            <a href="@Url.Action("Details", new { id = donation.Id })" class="action-button details-button">Details</a>
                            <a href="@Url.Action("Delete", new { id = donation.Id })" class="action-button delete-button">Delete</a>
                        </td>
                    </tr>
                    index++;
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="empty-message">No donations provided yet.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
