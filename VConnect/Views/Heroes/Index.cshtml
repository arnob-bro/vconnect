@model VConnect.Models.HeroesViewModel
@{
    ViewData["Title"] = "Meet Our Heroes - VConnect";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Section -->
<section class="hero-banner">
    <div class="container text-center text-white">
        <h1 class="hero-title">Meet Our Heroes</h1>
        <p class="hero-subtitle">Celebrating the extraordinary volunteers who make VConnect possible</p>
    </div>
</section>

<!-- Stats Section -->
<section class="stats-section py-5 bg-light">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4">
                <div class="stat-card">
                    <h2 class="stat-number text-vol" data-count="@Model.TotalHeroes">0</h2>
                    <p class="text-muted">Active Volunteers</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card">
                    <h2 class="stat-number text-vol" data-count="@Model.TotalHours">0</h2>
                    <p class="text-muted">Hours Volunteered</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card">
                    <h2 class="stat-number text-vol" data-count="@Model.TotalProjects">0</h2>
                    <p class="text-muted">Projects Completed</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Heroes -->
<section class="featured-heroes py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="section-title text-vol">Featured Heroes</h2>
            <p class="section-subtitle">Our most dedicated volunteers making significant impacts</p>
        </div>

        <div class="row g-4">
            @foreach (var hero in Model.FeaturedHeroes)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="hero-card card border-0 shadow-lg h-100">
                        <div class="hero-image-container">
                            <img src="@hero.ProfileImage" class="hero-image" alt="@hero.FullName">
                            <div class="hero-overlay">
                                <a href="@Url.Action("Details", "Heroes", new { id = hero.Id })" class="btn btn-warning btn-sm">View Profile</a>
                            </div>
                        </div>
                        <div class="card-body text-center">
                            <h5 class="card-title fw-bold">@hero.FullName</h5>
                            <p class="text-muted mb-2">@hero.Role</p>
                            <p class="text-vol mb-3"><i class="fas fa-map-marker-alt me-2"></i>@hero.Location</p>

                            <div class="hero-stats d-flex justify-content-around mb-3">
                                <div>
                                    <h6 class="fw-bold mb-0">@hero.HoursVolunteered</h6>
                                    <small class="text-muted">Hours</small>
                                </div>
                                <div>
                                    <h6 class="fw-bold mb-0">@hero.ProjectsCompleted</h6>
                                    <small class="text-muted">Projects</small>
                                </div>
                                <div>
                                    <h6 class="fw-bold mb-0">@hero.JoinedDate.ToString("yyyy")</h6>
                                    <small class="text-muted">Since</small>
                                </div>
                            </div>

                            <p class="card-text">@hero.ShortBio</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- All Heroes Grid -->
<section class="all-heroes py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="section-title text-vol">Our Volunteer Community</h2>
            <p class="section-subtitle">Join thousands of volunteers making a difference across Bangladesh</p>
        </div>

        <div class="row g-4">
            @foreach (var hero in Model.AllHeroes)
            {
                <div class="col-xl-3 col-lg-4 col-md-6">
                    <div class="hero-card-sm card border-0 shadow-sm h-100">
                        <div class="hero-image-sm-container">
                            <img src="@hero.ProfileImage" class="hero-image-sm" alt="@hero.FullName">
                        </div>
                        <div class="card-body text-center">
                            <h6 class="card-title fw-bold mb-1">@hero.FullName</h6>
                            <p class="text-muted small mb-2">@hero.Role</p>
                            <div class="hero-stats-sm d-flex justify-content-center gap-3 mb-2">
                                <div>
                                    <span class="fw-bold">@hero.HoursVolunteered</span>
                                    <small class="text-muted d-block">Hours</small>
                                </div>
                                <div>
                                    <span class="fw-bold">@hero.ProjectsCompleted</span>
                                    <small class="text-muted d-block">Projects</small>
                                </div>
                            </div>
                            <a href="@Url.Action("Details", "Heroes", new { id = hero.Id })" class="btn btn-outline-vol btn-sm">View Profile</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="cta-section">
    <div class="container text-center text-white">
        <h2 class="cta-title">Become a Hero Today</h2>
        <p class="cta-subtitle">Join our community of volunteers and make a difference in your community</p>
        <a href="@Url.Action("Register", "Account")" class="btn btn-warning btn-lg px-5 py-3">
            <i class="fas fa-user-plus me-2"></i>Join Now
        </a>
    </div>
</section>

@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        /* Global Styles */
        :root {
            --primary-color: #0b3d2e;
            --primary-light: #1a5e48;
            --accent-color: #ffc107;
            --text-dark: #333;
            --text-light: #6c757d;
            --bg-light: #f8f9fa;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        /* Hero Section */
        .hero-banner {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
            padding: 7rem 0 5rem;
            margin-top: -25px;
        }

        .hero-title {
            font-size: 3rem;
            font-weight: 800;
            margin-bottom: 1rem;
            animation: fadeInDown 1s ease;
        }

        .hero-subtitle {
            font-size: 1.25rem;
            font-weight: 300;
            max-width: 700px;
            margin: 0 auto;
            animation: fadeInUp 1s ease;
        }

        /* Stats Section */
        .stats-section {
            position: relative;
            z-index: 1;
        }

        .stat-card {
            padding: 2.5rem 1rem;
            transition: transform 0.3s ease;
        }

            .stat-card:hover {
                transform: translateY(-5px);
            }

        .stat-number {
            font-size: 3.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        /* Section Titles */
        .section-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 1rem;
            position: relative;
            display: inline-block;
        }

            .section-title::after {
                content: '';
                position: absolute;
                bottom: -10px;
                left: 50%;
                transform: translateX(-50%);
                width: 60px;
                height: 3px;
                background-color: var(--primary-color);
            }

        .section-subtitle {
            font-size: 1.1rem;
            color: var(--text-light);
            max-width: 600px;
            margin: 0 auto;
        }

        /* Hero Cards */
        .hero-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border-radius: 15px;
            overflow: hidden;
            animation: fadeIn 0.5s ease;
        }

            .hero-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 25px rgba(0,0,0,0.15) !important;
            }

        .hero-image-container {
            position: relative;
            height: 250px;
            overflow: hidden;
        }

        .hero-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .hero-card:hover .hero-image {
            transform: scale(1.05);
        }

        .hero-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(11, 61, 46, 0.8);
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .hero-card:hover .hero-overlay {
            opacity: 1;
        }

        .hero-stats {
            border-top: 1px solid #eee;
            border-bottom: 1px solid #eee;
            padding: 1rem 0;
        }

        /* Small hero cards */
        .hero-card-sm {
            transition: transform 0.3s ease;
            border-radius: 10px;
            animation: fadeIn 0.5s ease;
        }

            .hero-card-sm:hover {
                transform: translateY(-3px);
            }

        .hero-image-sm-container {
            height: 120px;
            overflow: hidden;
        }

        .hero-image-sm {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .hero-stats-sm {
            font-size: 0.9rem;
        }

        .btn-outline-vol {
            color: var(--primary-color);
            border-color: var(--primary-color);
        }

            .btn-outline-vol:hover {
                background-color: var(--primary-color);
                color: white;
            }

        /* CTA Section */
        .cta-section {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
            padding: 5rem 0;
        }

        .cta-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 1rem;
        }

        .cta-subtitle {
            font-size: 1.2rem;
            max-width: 600px;
            margin: 0 auto 2rem;
        }

        /* Animations */
        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Responsive adjustments */
        @@media (max-width: 992px) {
            .hero-title {
                font-size: 2.5rem;
            }

            .stat-number {
                font-size: 2.8rem;
            }
        }

        @@media (max-width: 768px) {
            .hero-banner {
                padding: 6rem 0 4rem;
            }

            .hero-title {
                font-size: 2rem;
            }

            .hero-subtitle {
                font-size: 1.1rem;
            }

            .stat-card {
                padding: 1.5rem 0.5rem;
            }

            .stat-number {
                font-size: 2.2rem;
            }

            .section-title {
                font-size: 2rem;
            }

            .hero-image-container {
                height: 200px;
            }

            .cta-title {
                font-size: 2rem;
            }
        }

        @@media (max-width: 576px) {
            .hero-title {
                font-size: 1.8rem;
            }

            .stat-number {
                font-size: 1.8rem;
            }
        }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Counter animation for stats
            const counters = document.querySelectorAll('.stat-number');
            const speed = 200; // The lower the slower

            counters.forEach(counter => {
                const target = +counter.getAttribute('data-count');
                const count = +counter.innerText;
                const increment = Math.ceil(target / speed);

                const updateCount = () => {
                    if (count < target) {
                        counter.innerText = Math.min(count + increment, target).toLocaleString();
                        setTimeout(updateCount, 1);
                    }
                };

                updateCount();
            });

            // Add animation to hero cards when they come into view
            const heroCards = document.querySelectorAll('.hero-card, .hero-card-sm');

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.animation = 'fadeInUp 0.5s ease forwards';
                        observer.unobserve(entry.target);
                    }
                });
            }, {
                threshold: 0.1
            });

            heroCards.forEach(card => {
                observer.observe(card);
            });
        });
    </script>
}