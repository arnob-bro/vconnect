                                <span class="badge category-badge">@hero.Role</span>
                            </div>
                        </div>
                        <div class="card-body text-center d-flex flex-column">
                            <h6 class="card-title case-title mb-1">@hero.FullName</h6>
                            <p class="text-muted small mb-2">@hero.Location</p>
                            <div class="case-stats d-flex justify-content-center gap-3 mb-3 mt-auto">
                                <div>
                                    <span class="fw-bold">@hero.HoursVolunteered</span>
                                    <small class="text-muted d-block">Hours</small>
                                </div>
                                <div>
                                    <span class="fw-bold">@hero.ProjectsCompleted</span>
                                    <small class="text-muted d-block">Projects</small>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-0 pt-0">
                            <a href="@Url.Action("Details", "Heroes", new { id = hero.Id })" class="btn btn-sm w-100 case-button">
                                View Profile
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

