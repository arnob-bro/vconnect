@model VConnect.Models.HeroesViewModel
@{
    ViewData["Title"] = "Meet Our Heroes - VConnect";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container text-center text-white">
        <h1 class="hero-title">Meet Our Heroes</h1>
        <p class="hero-subtitle">Celebrating the extraordinary volunteers who make VConnect possible</p>
    </div>
</section>

<!-- Stats Section -->
<section class="stats-section bg-light py-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4 col-6 mb-4 mb-md-0">
                <div class="stat-card">
                    <h2 class="stat-number" id="stat1" data-count="@Model.TotalHeroes">0</h2>
                    <p class="stat-label">Active Volunteers</p>
                </div>
            </div>
            <div class="col-md-4 col-6 mb-4 mb-md-0">
                <div class="stat-card">
                    <h2 class="stat-number" id="stat2" data-count="@Model.TotalHours">0</h2>
                    <p class="stat-label">Hours Volunteered</p>
                </div>
            </div>
            <div class="col-md-4 col-12 mt-3 mt-md-0">
                <div class="stat-card">
                    <h2 class="stat-number" id="stat3" data-count="@Model.TotalProjects">0</h2>
                    <p class="stat-label">Projects Completed</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Heroes -->
<section class="featured-section py-5">
    <div class="container">
        <div class="text-center section-heading mb-5">
            <span class="badge featured-badge mb-3">Featured Heroes</span>
            <h2 class="section-title">Our Most Dedicated Volunteers</h2>
            <p class="section-subtitle">Making significant impacts across communities</p>
        </div>

        <div class="row g-4">
            @foreach (var hero in Model.FeaturedHeroes)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="case-card card border-0 shadow-sm h-100">
                        <div class="case-image-container">
                            <img src="@hero.ProfileImage" class="case-image" alt="@hero.FullName" onerror="this.src='https://via.placeholder.com/400x300/0b3d2e/ffffff?text=VConnect+Volunteer'">
                            <div class="case-overlay">
                                <span class="badge category-badge">@hero.Role</span>
                            </div>
                        </div>
                        <div class="card-body text-center d-flex flex-column">
                            <div class="case-meta mb-2">
                                <small class="text-muted">
                                    <i class="fas fa-map-marker-alt me-1"></i>@hero.Location
                                </small>
                                <span class="badge status-badge float-end">
                                    Since @hero.JoinedDate.ToString("yyyy")
                                </span>
                            </div>

                            <h5 class="card-title case-title mt-2">@hero.FullName</h5>
                            <p class="card-text case-description flex-grow-1">@hero.ShortBio</p>

                            <div class="case-stats d-flex justify-content-between mb-3">
                                <small>
                                    <i class="fas fa-clock me-1"></i>@hero.HoursVolunteered hours
                                </small>
                                <small>
                                    <i class="fas fa-tasks me-1"></i>@hero.ProjectsCompleted projects
                                </small>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-0 pt-0">
                            <a href="@Url.Action("Details", "Heroes", new { id = hero.Id })" class="btn btn-sm w-100 case-button">
                                View Profile
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- All Heroes Grid -->
<section class="categories-section bg-light py-5">
    <div class="container">
        <div class="text-center section-heading mb-5">
            <h2 class="section-title">Our Volunteer Community</h2>
            <p class="section-subtitle">Join thousands of volunteers making a difference across Bangladesh</p>
        </div>

        <div class="row g-4">
            @foreach (var hero in Model.AllHeroes)
            {
                <div class="col-xl-3 col-lg-4 col-md-6 mb-4">
                    <div class="case-card card border-0 shadow-sm h-100">
                        <div class="case-image-container">
                            <img src="@hero.ProfileImage" class="case-image" alt="@hero.FullName" onerror="this.src='https://via.placeholder.com/400x300/0b3d2e/ffffff?text=VConnect+Volunteer'">
