@model VConnect.Models.Hero
@{
    ViewData["Title"] = Model.FullName + " - VConnect Hero";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container text-center text-white">
        <h1 class="hero-title">@Model.FullName</h1>
        <p class="hero-subtitle">@Model.Role from @Model.Location</p>
    </div>
</section>

<!-- Breadcrumb -->
<section class="py-3" style="background-color: #f8f9fa;">
    <div class="container">
        
    </div>
</section>

<!-- Hero Details -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="case-card card border-0 shadow-sm h-100">
                    <div class="case-image-container">
                        <img src="@Model.ProfileImage" class="case-image" alt="@Model.FullName">
                        <div class="case-overlay">
                            <span class="badge category-badge">@Model.Role</span>
                        </div>
                    </div>
                    <div class="card-body text-center">
                        <h2 class="card-title case-title mb-2">@Model.FullName</h2>
                        <p class="text-muted mb-3"><i class="fas fa-map-marker-alt me-2"></i>@Model.Location</p>

                        <div class="hero-stats-details mb-4">
                            <div class="row text-center">
                                <div class="col-4">
                                    <div class="stat-item">
                                        <h4 class="fw-bold text-vol mb-0">@Model.HoursVolunteered</h4>
                                        <small>Hours</small>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="stat-item">
                                        <h4 class="fw-bold text-vol mb-0">@Model.ProjectsCompleted</h4>
                                        <small>Projects</small>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="stat-item">
                                        <h4 class="fw-bold text-vol mb-0">@Model.JoinedDate.ToString("MMM yyyy")</h4>
                                        <small>Joined</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.SocialMediaLinks))
                        {
                            <div class="social-links mb-4">
                                <h6 class="fw-bold mb-3">Connect</h6>
                                <div class="d-flex justify-content-center gap-3">
                                    <a href="#" class="text-vol fs-5"><i class="fab fa-facebook"></i></a>
                                    <a href="#" class="text-vol fs-5"><i class="fab fa-twitter"></i></a>
                                    <a href="#" class="text-vol fs-5"><i class="fab fa-linkedin"></i></a>
                                    <a href="#" class="text-vol fs-5"><i class="fab fa-instagram"></i></a>
                                </div>
                            </div>
                        }

                        <a href="@Url.Action("Index", "Heroes")" class="btn btn-sm w-100 case-button">
                            <i class="fas fa-arrow-left me-2"></i>Back to Heroes
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-lg-8">
                <div class="hero-details-content">
                    <div class="case-card card border-0 shadow-sm mb-4">
                        <div class="card-header" style="background-color: #0b3d2e; color: white;">
                            <h5 class="mb-0"><i class="fas fa-user me-2"></i>About</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">@Model.ShortBio</p>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Skills))
                    {
                        <div class="case-card card border-0 shadow-sm mb-4">
                            <div class="card-header" style="background-color: #0b3d2e; color: white;">
                                <h5 class="mb-0"><i class="fas fa-tools me-2"></i>Skills & Expertise</h5>
                            </div>
                            <div class="card-body">
                                <div class="skills-container">
                                    @foreach (var skill in Model.Skills.Split(','))
                                    {
                                        <span class="badge category-badge m-1">@skill.Trim()</span>
                                    }
                                </div>
                            </div>
                        </div>
                    }

                    <div class="case-card card border-0 shadow-sm">
                        <div class="card-header" style="background-color: #0b3d2e; color: white;">
                            <h5 class="mb-0"><i class="fas fa-trophy me-2"></i>Volunteer Journey</h5>
                        </div>
                        <div class="card-body">
                            <div class="timeline">
                                <div class="timeline-item">
                                    <div class="timeline-content">
                                        <h6 class="fw-bold">Joined VConnect</h6>
                                        <p class="text-muted mb-0">@Model.JoinedDate.ToString("MMMM yyyy")</p>
                                    </div>
                                </div>
                                <div class="timeline-item">
                                    <div class="timeline-content">
                                        <h6 class="fw-bold">First Project Completed</h6>
                                        <p class="text-muted mb-0">@Model.JoinedDate.AddMonths(1).ToString("MMMM yyyy")</p>
                                    </div>
                                </div>
                                <div class="timeline-item">
                                    <div class="timeline-content">
                                        <h6 class="fw-bold">Became Senior Volunteer</h6>
                                        <p class="text-muted mb-0">@Model.JoinedDate.AddMonths(6).ToString("MMMM yyyy")</p>
                                    </div>
                                </div>
                                <div class="timeline-item">
                                    <div class="timeline-content">
                                        <h6 class="fw-bold">Current Status</h6>
                                        <p class="text-muted mb-0">Active @(Model.IsActive ? "✓" : "✗")</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="cta-section">
    <div class="container text-center text-white">
        <h2 class="cta-title mb-3">Inspired by @Model.FullName's Journey?</h2>
        <p class="cta-subtitle mb-4">Join our community and start making a difference today</p>
        <div class="cta-buttons">
            <a href="@Url.Action("Register", "Account")" class="btn btn-warning btn-lg px-4 me-3">
                <i class="fas fa-user-plus me-2"></i>Become a Volunteer
            </a>
            <a href="@Url.Action("Index", "Volunteer")" class="btn btn-outline-light btn-lg px-4">
                <i class="fas fa-hands-helping me-2"></i>Find Opportunities
            </a>
        </div>
    </div>
</section>

@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #0b3d2e;
            --secondary-color: #1a5e48;
            --accent-color: #ffc107;
            --light-bg: #f8f9fa;
            --dark-text: #232a36;
        }

        /* Hero Section */
        .hero-section {
            padding: 7rem 0 5rem;
            background: linear-gradient(135deg, var(--dark-text) 0%, var(--secondary-color) 100%);
            margin-top: -25px;
            position: relative;
            overflow: hidden;
        }

        .hero-title {
            font-size: 3.5rem;
            font-weight: 800;
            margin-bottom: 1rem;
            animation: fadeInDown 1s ease;
        }

        .hero-subtitle {
            font-size: 1.35rem;
            max-width: 700px;
            margin: 0 auto;
            animation: fadeInUp 1s ease;
        }

        /* Case Cards */
        .case-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border-radius: 15px;
            overflow: hidden;
        }

        .case-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.1) !important;
        }

        .case-image-container {
            position: relative;
            height: 350px;
            overflow: hidden;
        }

        .case-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .case-card:hover .case-image {
            transform: scale(1.1);
        }

        .case-overlay {
            position: absolute;
            top: 15px;
            left: 15px;
        }

        .case-title {
            color: var(--primary-color);
            font-weight: 700;
            transition: color 0.3s ease;
        }

        .case-card:hover .case-title {
            color: var(--secondary-color);
        }

        .case-button {
            color: var(--primary-color);
            border: 2px solid var(--primary-color);
            border-radius: 50px;
            padding: 0.5rem 1rem;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .case-button:hover {
            background-color: var(--primary-color);
            color: white;
        }

        /* Badges */
        .category-badge {
            background-color: var(--primary-color);
            color: white;
            font-size: 0.85rem;
            padding: 0.5rem 0.8rem;
        }

        /* Stats */
        .hero-stats-details {
            border-top: 1px solid #eee;
            border-bottom: 1px solid #eee;
            padding: 1.5rem 0;
        }

        .stat-item {
            padding: 0.5rem;
        }

        .text-vol {
            color: var(--primary-color);
        }

        /* Timeline */
        .timeline {
            position: relative;
            padding-left: 2rem;
        }

        .timeline-item {
            position: relative;
            padding-bottom: 2rem;
        }

        .timeline-item:last-child {
            padding-bottom: 0;
        }

        .timeline-item::before {
            content: '';
            position: absolute;
            left: -2rem;
            top: 0;
            bottom: 0;
            width: 2px;
            background-color: var(--primary-color);
        }

        .timeline-item::after {
            content: '';
            position: absolute;
            left: -2.25rem;
            top: 0.5rem;
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background-color: var(--primary-color);
            border: 3px solid white;
            box-shadow: 0 0 0 2px var(--primary-color);
        }

        .timeline-content {
            background: white;
            padding: 1rem;
            border-radius: 8px;
            border-left: 3px solid var(--primary-color);
        }

        /* CTA Section */
        .cta-section {
            padding: 5rem 0;
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            position: relative;
            overflow: hidden;
        }

        .cta-title {
            font-weight: 700;
            font-size: 2.5rem;
        }

        .cta-subtitle {
            font-size: 1.3rem;
            max-width: 600px;
            margin: 0 auto;
        }

        .cta-buttons .btn {
            border-radius: 50px;
            padding: 0.8rem 2rem;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .cta-buttons .btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.15);
        }

        /* Animations */
        @@keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Responsive Design */
        @@media (max-width: 992px) {
            .hero-section {
                padding: 6rem 0 4rem;
            }

            .hero-title {
                font-size: 2.5rem;
            }

            .hero-subtitle {
                font-size: 1.2rem;
            }

            .case-image-container {
                height: 250px;
            }
        }

        @@media (max-width: 768px) {
            .hero-title {
                font-size: 2.2rem;
            }

            .hero-subtitle {
                font-size: 1.1rem;
            }

            .cta-title {
                font-size: 2rem;
            }

            .cta-subtitle {
                font-size: 1.1rem;
            }

            .cta-buttons .btn {
                display: block;
                width: 100%;
                margin-bottom: 1rem;
            }

            .cta-buttons .btn:last-child {
                margin-bottom: 0;
            }
        }

        @@media (max-width: 576px) {
            .hero-title {
                font-size: 2rem;
            }

            .timeline {
                padding-left: 1.5rem;
            }

            .timeline-item::before {
                left: -1.5rem;
            }

            .timeline-item::after {
                left: -1.65rem;
            }
        }
    </style>
}