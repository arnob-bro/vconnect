@model VConnect.Models.ProfileDetails
@{
    ViewData["Title"] = "Delete Account - VConnect";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        body {
             /* background: #0b1d33; */
            margin-top: -25px;
        }

        .hero {
            /* background: linear-gradient(135deg, #7f1d1d, #b91c1c); */
            background: linear-gradient(135deg, #23313c 0%, #0f3f33 100%);
            padding: 48px 0 72px;
            color: #fff;
            text-align: center;
        }

        .delete-card {
            background: #fff;
            border-radius: 16px;
            box-shadow: 0 12px 28px rgba(0,0,0,.25);
            max-width: 760px;
            margin: -48px auto 32px;
        }

        .danger {
            background: #fff1f2;
            border: 1px solid #fecdd3;
            color: #7f1d1d;
            border-radius: 10px;
            padding: 12px 14px;
        }

        @@media (max-width: 768px) {
            .delete-card {
                margin: -40px 12px 24px;
            }
        }
    </style>
}

<section class="hero">
    <div class="container">
        <h1 class="h3 fw-bold mb-1">Delete Account</h1>
        <p class="mb-0" style="opacity:.9">This action is permanent</p>
    </div>
</section>

<div class="delete-card">
    <div class="p-3 p-md-4">
        <div class="danger mb-3">
            <strong>Warning:</strong> deleting your account will permanently remove your profile and data.
        </div>

        <p class="mb-4">
            Are you sure you want to delete the account for
            <strong>@Model?.FirstName @Model?.LastName</strong>
            (<em>@Model?.Email</em>)?
        </p>

        <form asp-action="DeleteConfirmed" method="post">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-danger px-4">Yes, delete</button>
            <a asp-action="Index" class="btn btn-outline-secondary ms-2 px-4">No, go back</a>
        </form>
    </div>
</div>
