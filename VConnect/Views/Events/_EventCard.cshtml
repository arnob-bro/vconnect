@using VConnect.Models.Events
@model VConnect.Models.Events.Event

<div class="col-md-4">
    <div class="card border-0 shadow-sm h-100">
        <div class="ratio ratio-16x9 bg-light d-flex align-items-center justify-content-center">
            <i class="fas fa-calendar-check text-muted" style="font-size: 2rem;"></i>
        </div>
        <div class="card-body">
            <h5 class="card-title fw-bold">@Model.Title</h5>
            <p class="card-text text-muted small">@Model.Description?.Substring(0, Math.Min(Model.Description.Length, 80))...</p>

            <div class="d-flex flex-wrap gap-2 mb-2 small">
                <span class="badge bg-info text-dark">@Model.Status</span>
                <span><i class="fas fa-map-marker-alt me-1"></i>@Model.Location</span>
            </div>

            <div class="small text-muted mb-2">
                <i class="far fa-clock me-1"></i>
                @Model.StartDateTime.ToString("MMM d, yyyy h:mm tt")
            </div>

            <div class="d-flex justify-content-between align-items-center">
                <a href="@Url.Action("Details", "Events", new { id = Model.EventId })" class="btn btn-sm btn-outline-secondary">Details</a>
                <form asp-controller="Events" asp-action="Apply" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="eventId" value="@Model.EventId" />
                    <button type="submit" class="btn btn-sm btn-success">Apply</button>
                </form>
            </div>
        </div>
    </div>
</div>
