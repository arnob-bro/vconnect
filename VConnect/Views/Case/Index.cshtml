@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Counter animation for stats
            function animateCounter(element, target) {
                let current = 0;
                let increment = target / 50;
                let duration = 2000; // 2 seconds
                let stepTime = Math.abs(Math.floor(duration / (target / increment)));

                let timer = setInterval(function() {
                    current += increment;
                    if (current >= target) {
                        clearInterval(timer);
                        current = target;
                    }

                    if (element.id === 'stat4') {
                        element.textContent = Math.floor(current) + '%';
                    } else {
                        element.textContent = Math.floor(current).toLocaleString();
                    }
                }, stepTime);
            }

            // Start counter animation when stats are in viewport
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        animateCounter(document.getElementById('stat1'), @Model.ImpactStats.TotalCases);
                        animateCounter(document.getElementById('stat2'), @Model.ImpactStats.CommunitiesImpacted);
                        animateCounter(document.getElementById('stat3'), @Model.ImpactStats.VolunteersInvolved);
                        animateCounter(document.getElementById('stat4'), @Model.ImpactStats.SuccessRate);
                        observer.disconnect();
                    }
                });
            }, { threshold: 0.5 });

            observer.observe(document.querySelector('.stats-section'));

            // Get all filter buttons and case items
            const filterButtons = document.querySelectorAll('.filter-btn');
            const caseItems = document.querySelectorAll('.case-item');
            const noResults = document.getElementById('noResults');
            const caseGrid = document.getElementById('caseStudiesGrid');

            // Filter function
            function filterCases(category) {
                let visibleItems = 0;

                caseItems.forEach(item => {
                    const itemCategory = item.getAttribute('data-category');

                    if (category === 'all' || itemCategory === category) {
                        item.style.display = 'block';
                        visibleItems++;
                        // Add animation
                        setTimeout(() => {
                            item.style.opacity = '1';
                            item.style.transform = 'translateY(0)';
                        }, 50);
                    } else {
                        item.style.opacity = '0';
                        item.style.transform = 'translateY(20px)';
                        setTimeout(() => {
                            item.style.display = 'none';
                        }, 300);
                    }
                });

                // Show/hide no results message
                if (visibleItems === 0) {
                    noResults.style.display = 'block';
                    caseGrid.style.display = 'none';
                } else {
                    noResults.style.display = 'none';
                    caseGrid.style.display = 'flex';
                }
            }

            // Add click event listeners to filter buttons
            filterButtons.forEach(button => {
                button.addEventListener('click', function() {
                    // Remove active class from all buttons
                    filterButtons.forEach(btn => {
                        btn.classList.remove('active');
                        btn.classList.remove('btn-primary');
                        btn.classList.add('btn-outline-primary');
                    });

                    // Add active class to clicked button
                    this.classList.add('active');
                    this.classList.remove('btn-outline-primary');
                    this.classList.add('btn-primary');

                    // Filter cases
                    const filterValue = this.getAttribute('data-filter');
                    filterCases(filterValue);
                });
            });

            // Initialize with 'all' filter and set initial styles
            filterButtons.forEach(btn => {
                if (btn.classList.contains('active')) {
                    btn.classList.remove('btn-outline-primary');
                    btn.classList.add('btn-primary');
                } else {
                    btn.classList.add('btn-outline-primary');
                }
            });

            // Initialize case items with transition
            caseItems.forEach(item => {
                item.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
            });

            filterCases('all');
        });
    </script>
