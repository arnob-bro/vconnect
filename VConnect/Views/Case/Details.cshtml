@model VConnect.Models.Cases.Study

@{
    ViewData["Title"] = Model.Title + " - Case Study - VConnect";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero -->
<section class="py-4" style="background:linear-gradient(135deg,#232a36 0%,#1d4538 100%);margin-top:0;">
    <div class="container py-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")" class="text-white">Home</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Case")" class="text-white">Case Studies</a></li>
                <li class="breadcrumb-item active text-warning" aria-current="page">@Model.Title</li>
            </ol>
        </nav>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="mb-4">
                    <span class="badge text-white mb-2" style="background-color:#0b3d2e;">@Model.Category</span>
                    <h1 class="fw-bold mb-2" style="color:#0b3d2e;">@Model.Title</h1>
                    @if (!string.IsNullOrWhiteSpace(Model.Subtitle))
                    {
                        <p class="lead">@Model.Subtitle</p>
                    }

                    <div class="d-flex flex-wrap gap-3 mb-3">
                        @if (!string.IsNullOrWhiteSpace(Model.Location))
                        {
                            <span class="badge bg-secondary"><i class="fas fa-map-marker-alt me-1"></i>@Model.Location</span>
                        }
                        @if (!string.IsNullOrWhiteSpace(Model.Duration))
                        {
                            <span class="badge bg-info text-dark"><i class="fas fa-clock me-1"></i>@Model.Duration</span>
                        }
                        @if (!string.IsNullOrWhiteSpace(Model.Status))
                        {
                            <span class="badge @(Model.Status == "Completed" ? "bg-success" : "bg-warning")">@Model.Status</span>
                        }
                    </div>
                </div>

                @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid rounded-3 shadow mb-4">
                }

                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header text-white" style="background-color:#0b3d2e;">
                        <h5 class="mb-0"><i class="fas fa-exclamation-circle me-2"></i>The Challenge</h5>
                    </div>
                    <div class="card-body"><p class="card-text">@Model.Challenge</p></div>
                </div>

                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header text-white" style="background-color:#0b3d2e;">
                        <h5 class="mb-0"><i class="fas fa-lightbulb me-2"></i>Our Solution</h5>
                    </div>
                    <div class="card-body"><p class="card-text">@Model.Solution</p></div>
                </div>

                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header text-white" style="background-color:#0b3d2e;">
                        <h5 class="mb-0"><i class="fas fa-chart-line me-2"></i>Results & Impact</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">@Model.Results</p>
                        <div class="row text-center mt-4">
                            <div class="col-md-4"><div class="bg-light p-3 rounded"><h4 class="fw-bold mb-1" style="color:#0b3d2e;">@Model.Volunteers</h4><small>Volunteers</small></div></div>
                            <div class="col-md-4"><div class="bg-light p-3 rounded"><h4 class="fw-bold mb-1" style="color:#0b3d2e;">@Model.Beneficiaries.ToString("N0")</h4><small>Beneficiaries</small></div></div>
                            <div class="col-md-4"><div class="bg-light p-3 rounded"><h4 class="fw-bold mb-1" style="color:#0b3d2e;">@Model.Duration</h4><small>Duration</small></div></div>
                        </div>
                    </div>
                </div>

                @if (Model.Milestones?.Any() == true)
                {
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header text-white" style="background-color:#0b3d2e;">
                            <h5 class="mb-0"><i class="fas fa-flag-checkered me-2"></i>Milestones</h5>
                        </div>
                        <div class="card-body">
                            <ul class="list-unstyled">
                                @foreach (var m in Model.Milestones.OrderBy(x => x.Date))
                                {
                                    <li class="mb-2">
                                        <strong>@m.Date.ToString("yyyy-MM-dd")</strong> — @m.Title
                                        @if (!string.IsNullOrWhiteSpace(m.Description))
                                        {
                                            <span>: @m.Description</span>
                                        }
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                }
            </div>

            <div class="col-lg-4">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header text-white" style="background-color:#0b3d2e;">
                        <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Project Details</h5>
                    </div>
                    <div class="card-body">
                        <div class="quick-facts">
                            <div class="fact-item mb-3"><strong>Category:</strong> <span class="badge text-white" style="background-color:#0b3d2e;">@Model.Category</span></div>
                            @if (!string.IsNullOrWhiteSpace(Model.Location))
                            {
                                <div class="fact-item mb-3"><strong>Location:</strong> <span>@Model.Location</span></div>
                            }
                            @if (!string.IsNullOrWhiteSpace(Model.Duration))
                            {
                                <div class="fact-item mb-3"><strong>Duration:</strong> <span>@Model.Duration</span></div>
                            }
                            @if (!string.IsNullOrWhiteSpace(Model.Status))
                            {
                                <div class="fact-item mb-3"><strong>Status:</strong> <span class="badge @(Model.Status == "Completed" ? "bg-success" : "bg-warning")">@Model.Status</span></div>
                            }
                            @if (!string.IsNullOrEmpty(Model.Budget))
                            {
                                <div class="fact-item mb-3"><strong>Budget:</strong> <span>@Model.Budget</span></div>
                            }
                            @if (!string.IsNullOrEmpty(Model.Partners))
                            {
                                <div class="fact-item"><strong>Partners:</strong> <span>@Model.Partners</span></div>
                            }
                        </div>
                    </div>
                </div>

                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body text-center">
                        <h6 class="fw-bold mb-3" style="color:#0b3d2e;">Inspired by this project?</h6>
                        <a href="@Url.Action("Register", "Account")" class="btn btn-warning btn-sm w-100 mb-2"><i class="fas fa-user-plus me-1"></i>Join Similar Projects</a>
                        <a href="@Url.Action("Index", "Donation")" class="btn btn-sm w-100" style="color:#0b3d2e;border-color:#0b3d2e;"><i class="fas fa-donate me-1"></i>Support Our Work</a>
                    </div>
                </div>

                <div class="text-center">
                    <a href="@Url.Action("Index", "Case")" class="btn btn-outline-secondary btn-sm"><i class="fas fa-arrow-left me-1"></i>Back to All Case Studies</a>
                </div>
            </div>
        </div>
    </div>
</section>
