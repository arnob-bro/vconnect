@model VConnect.Models.LoginViewModel

@{
    ViewData["Title"] = "Login - VConnect";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container text-center text-white">
        <h1 class="hero-title">Welcome Back</h1>
        <p class="hero-subtitle">Sign in to continue your volunteer journey with VConnect</p>
    </div>
</section>

<!-- Login Form Section -->
<section class="login-section bg-light">
    <div class="container">
        <div class="text-center section-heading">
            <span class="badge featured-badge">Sign In</span>
            <h2 class="section-title">Access Your Account</h2>
            <p class="section-subtitle">Welcome back! Please enter your credentials to continue</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-6 col-xl-5">
                <div class="case-card login-card card border-0 shadow-sm">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <img src="/images/vc_logo_2.png" alt="VConnect Logo" style="height: 60px;" class="mb-3">
                        </div>

                        <form asp-action="Login" method="post" class="needs-validation" novalidate>
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                            <div class="row g-4">
                                <!-- Email Field -->
                                <div class="col-12">
                                    <div class="form-group">
                                        <label asp-for="Email" class="form-label fw-bold text-dark mb-2">
                                            <i class="fas fa-envelope me-2 text-primary"></i>Email Address
                                        </label>
                                        <input asp-for="Email" class="form-control form-input"
                                               placeholder="Enter your email address">
                                        <span asp-validation-for="Email" class="text-danger small d-block mt-1"></span>
                                    </div>
                                </div>

                                <!-- Password Field -->
                                <div class="col-12">
                                    <div class="form-group">
                                        <label asp-for="Password" class="form-label fw-bold text-dark mb-2">
                                            <i class="fas fa-lock me-2 text-primary"></i>Password
                                        </label>
                                        <input asp-for="Password" type="password" class="form-control form-input"
                                               placeholder="Enter your password">
                                        <span asp-validation-for="Password" class="text-danger small d-block mt-1"></span>
                                    </div>
                                </div>

                                <!-- Remember Me -->
                                <div class="col-12">
                                    <div class="form-check">
                                        <input asp-for="RememberMe" class="form-check-input custom-checkbox">
                                        <label asp-for="RememberMe" class="form-check-label text-muted">
                                            Remember me on this device
                                        </label>
                                    </div>
                                </div>

                                <!-- Submit Button -->
                                <div class="col-12 mt-4">
                                    <button type="submit" class="btn case-button w-100 py-3">
                                        <i class="fas fa-sign-in-alt me-2"></i>Sign In
                                    </button>
                                </div>

                                <!-- Registration Link -->
                                <div class="col-12 text-center mt-3">
                                    <p class="text-muted mb-0">
                                        Don't have an account?
                                        <a asp-action="Register" class="text-primary text-decoration-none fw-bold">
                                            Create one here
                                        </a>
                                    </p>
                                </div>
                            </div>
                        </form>
                    </div>

                    <div class="card-footer bg-transparent border-0 text-center py-3">
                        <small class="text-muted">
                            <i class="fas fa-shield-alt me-1 text-success"></i>
                            Your data is securely encrypted and protected
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <style>
        /* Global Styles */
        :root {
            --primary-color: #0b3d2e;
            --secondary-color: #1a5e48;
            --accent-color: #ffc107;
            --light-bg: #f8f9fa;
            --dark-text: #232a36;
        }

        /* Hero Section */
        .hero-section {
            padding: 7rem 0 5rem;
            background: linear-gradient(135deg, var(--dark-text) 0%, var(--secondary-color) 100%);
            margin-top: -25px;
            position: relative;
            overflow: hidden;
        }

            .hero-section::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                opacity: 0.5;
            }

        .hero-title {
            font-size: 3.5rem;
            font-weight: 800;
            margin-bottom: 1rem;
            animation: fadeInDown 1s ease;
        }

        .hero-subtitle {
            font-size: 1.35rem;
            max-width: 700px;
            margin: 0 auto;
            animation: fadeInUp 1s ease;
        }

        /* Login Section */
        .login-section {
            padding: 5rem 0;
        }

        .login-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border-radius: 15px;
            overflow: hidden;
        }

            .login-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 15px 35px rgba(0,0,0,0.1) !important;
            }

        /* Section Headings */
        .section-heading {
            margin-bottom: 4rem;
        }

        .featured-badge {
            background-color: var(--accent-color);
            color: #000;
            font-size: 0.9rem;
            padding: 0.5rem 1rem;
            margin-bottom: 1.5rem;
        }

        .section-title {
            color: var(--primary-color);
            font-weight: 700;
            margin-bottom: 1rem;
        }

        .section-subtitle {
            font-size: 1.25rem;
            color: #6c757d;
            max-width: 700px;
            margin: 0 auto;
        }

        /* Form Styles */
        .form-input {
            border: 2px solid #e9ecef;
            border-radius: 12px;
            padding: 1rem;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

            .form-input:focus {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 0.2rem rgba(11, 61, 46, 0.25);
                outline: none;
            }

        .form-label {
            color: var(--primary-color);
            margin-bottom: 0.5rem;
        }

        /* Custom Checkbox */
        .custom-checkbox {
            border: 2px solid #e9ecef;
            border-radius: 4px;
            transition: all 0.3s ease;
        }

            .custom-checkbox:checked {
                background-color: var(--primary-color);
                border-color: var(--primary-color);
            }

            .custom-checkbox:focus {
                box-shadow: 0 0 0 0.2rem rgba(11, 61, 46, 0.25);
            }

        /* Case Button (matching Heroes page) */
        .case-button {
            color: var(--primary-color);
            border: 2px solid var(--primary-color);
            border-radius: 50px;
            padding: 0.8rem 2rem;
            font-weight: 600;
            font-size: 1.1rem;
            transition: all 0.3s ease;
            background: transparent;
        }

            .case-button:hover {
                background-color: var(--primary-color);
                color: white;
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(11, 61, 46, 0.25);
            }

        /* Animations */
        @@keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Responsive Design */
        @@media (max-width: 1200px) {
            .hero-title {
                font-size: 3rem;
            }
        }

        @@media (max-width: 992px) {
            .hero-section {
                padding: 6rem 0 4rem;
            }
            .hero-title {
                font-size: 2.5rem;
            }
            .hero-subtitle {
                font-size: 1.2rem;
            }
            .login-section {
                padding: 4rem 0;
            }
            .section-heading {
                margin-bottom: 3rem;
            }
        }

        @@media (max-width: 768px) {
            .hero-title {
                font-size: 2.2rem;
            }
            .hero-subtitle {
                font-size: 1.1rem;
            }
            .login-section {
                padding: 3rem 0;
            }
            .card-body {
                padding: 2rem !important;
            }
            .container {
                padding: 0 1rem;
            }
        }

        @@media (max-width: 576px) {
            .hero-title {
                font-size: 2rem;
            }
        }

        /* Ensure content is below navbar */
        .login-section {
            padding-top: 6rem;
        }
    </style>
}