@model VConnect.Models.LoginViewModel

@{
    ViewData["Title"] = "Login - VConnect";
}


<section class="py-4" style="background:linear-gradient(135deg,#232a36 0%,#1d4538 100%);margin-top:-25px;">
    <div class="container py-4">
        
    </div>
</section>

<!-- Remove the background section since layout already handles it -->
<div class="container py-5 mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card border-0 shadow-lg" style="background: rgba(27, 40, 50, 0.95);
                                                      backdrop-filter: blur(10px);
                                                      border-radius: 20px;
                                                      margin-top: 2rem;">
                <div class="card-header border-0 text-center py-4"
                     style="background: linear-gradient(135deg, #0b3d2e 0%, #1a5e48 100%);
                            border-radius: 20px 20px 0 0 !important;">
                    <img src="/images/j.png" alt="Logo" style="height: 60px;" class="mb-3">
                    <h2 class="text-vol mb-0" style="font-weight: 800; font-size: 2.2rem;">Welcome Back</h2>
                    <p class="text-light mb-0" style="opacity: 0.9;">Sign in to your VConnect account</p>
                </div>

                <div class="card-body px-5 py-4">
                    <form asp-action="Login" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-pill"></div>

                        <!-- Email Field -->
                        <div class="form-group mb-4">
                            <label asp-for="Email" class="form-label text-light" style="font-weight: 600;">
                                <i class="fas fa-envelope me-2 text-warning"></i>Email Address
                            </label>
                            <input asp-for="Email" class="form-control form-control-lg"
                                   style="background: rgba(255,255,255,0.1);
                                          border: 2px solid rgba(255,255,255,0.2);
                                          color: #fff;
                                          border-radius: 12px;
                                          padding: 1rem;"
                                   placeholder="Enter your email">
                            <span asp-validation-for="Email" class="text-warning small d-block mt-2"></span>
                        </div>

                        <!-- Password Field -->
                        <div class="form-group mb-4">
                            <label asp-for="Password" class="form-label text-light" style="font-weight: 600;">
                                <i class="fas fa-lock me-2 text-warning"></i>Password
                            </label>
                            <input asp-for="Password" type="password" class="form-control form-control-lg"
                                   style="background: rgba(255,255,255,0.1);
                                          border: 2px solid rgba(255,255,255,0.2);
                                          color: #fff;
                                          border-radius: 12px;
                                          padding: 1rem;"
                                   placeholder="Enter your password">
                            <span asp-validation-for="Password" class="text-warning small d-block mt-2"></span>
                        </div>

                        <!-- Remember Me -->
                        <div class="form-group form-check mb-4">
                            <input asp-for="RememberMe" class="form-check-input"
                                   style="background: rgba(255,255,255,0.2);
                                          border-color: #ffd700;">
                            <label asp-for="RememberMe" class="form-check-label text-light">
                                Remember me
                            </label>
                        </div>

                        <!-- Submit Button -->
                        <div class="form-group mb-4">
                            <button type="submit" class="btn btn-warning w-100 py-3"
                                    style="font-weight: 700;
                                           font-size: 1.2rem;
                                           border-radius: 50px;
                                           background: linear-gradient(45deg, #ffd700, #ffaa00);
                                           border: none;
                                           color: #000;
                                           transition: all 0.3s ease;">
                                <i class="fas fa-sign-in-alt me-2"></i>Login
                            </button>
                        </div>

                        <!-- Divider -->
                        <div class="text-center mb-4">
                            <span class="text-light" style="opacity: 0.7;">OR</span>
                        </div>

                        <!-- Registration Link -->
                        <div class="text-center">
                            <p class="text-light mb-0">
                                Don't have an account?
                                <a asp-action="Register" class="text-warning text-decoration-none"
                                   style="font-weight: 600;">Create one here</a>
                            </p>
                        </div>
                    </form>
                </div>

                <div class="card-footer border-0 text-center py-3"
                     style="background: rgba(0,0,0,0.3);
                            border-radius: 0 0 20px 20px !important;">
                    <p class="text-light small mb-0" style="opacity: 0.8;">
                        <i class="fas fa-shield-alt me-1 text-warning"></i>
                        Your data is securely encrypted
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <style>
        .form-control:focus {
            background: rgba(255,255,255,0.15) !important;
            border-color: #ffd700 !important;
            box-shadow: 0 0 0 0.2rem rgba(255, 215, 0, 0.25) !important;
            color: #fff !important;
        }

        .form-check-input:checked {
            background-color: #ffd700 !important;
            border-color: #ffd700 !important;
        }

        .btn-warning:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(255, 215, 0, 0.4) !important;
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .card-body {
                padding: 2rem !important;
            }

            .container {
                padding: 0 1rem;
            }
        }

        /* Ensure content is below navbar */
        .container.py-5 {
            padding-top: 6rem !important;
        }
    </style>
}