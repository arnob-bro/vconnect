@{
    ViewData["Title"] = "Thank You - VConnect";
}

<div class="container py-5 mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
            <div class="card border-0 shadow-lg" style="background: rgba(27, 40, 50, 0.95);
                                                      backdrop-filter: blur(10px);
                                                      border-radius: 20px;">
                <div class="card-body p-5">
                    <div class="text-warning mb-4" style="font-size: 4rem;">
                        <i class="fas fa-check-circle"></i>
                    </div>

                    <h1 class="text-vol mb-3" style="font-weight: 800; font-size: 2.5rem;">
                        Thank You for Your Generosity!
                    </h1>

                    <p class="text-light lead mb-4">
                        Your donation will help us continue our mission to create positive change in communities worldwide.
                    </p>

                    <div class="row mt-5">
                        <div class="col-md-6 mb-3">
                            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-warning w-100 py-2">
                                <i class="fas fa-home me-2"></i>Return Home
                            </a>
                        </div>
                        <div class="col-md-6 mb-3">
                            <a href="@Url.Action("Index", "Volunteer")" class="btn btn-warning w-100 py-2">
                                <i class="fas fa-hands-helping me-2"></i>Volunteer
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>