@model VConnect.Models.DonationViewModel

@{
    ViewData["Title"] = "Donate - VConnect";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Section -->
<section class="py-5" style="background: linear-gradient(135deg, #232a36 0%, #1d4538 100%); margin-top: 0;">
    <div class="container py-5 text-center text-white">
        <h1 class="display-4 fw-bold mb-3">Support Our Mission</h1>
        <p class="lead mb-0">Your donation helps us create positive change in communities across Bangladesh</p>
    </div>
</section>

<!-- Donation Form -->
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg" style="background: rgba(27, 40, 50, 0.95); backdrop-filter: blur(10px); border-radius: 20px;">
                <div class="card-header border-0 text-center py-4"
                     style="background: linear-gradient(135deg, #0b3d2e 0%, #1a5e48 100%); border-radius: 20px 20px 0 0 !important;">
                    <img src="/images/j.png" alt="Logo" style="height: 60px;" class="mb-3" />
                    <h2 class="text-vol mb-0" style="font-weight: 800; font-size: 2.2rem;">Make a Donation</h2>
                    <p class="text-light mb-0" style="opacity: 0.9;">Every contribution makes a difference</p>
                </div>

                <div class="card-body px-5 py-4">
                    <form asp-controller="Donation" asp-action="Process" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-pill"></div>

                        <div class="row">
                            <!-- Donor Name -->
                            <div class="col-md-6">
                                <div class="form-group mb-4">
                                    <label asp-for="DonorName" class="form-label text-light" style="font-weight: 600;">
                                        <i class="fas fa-user me-2 text-warning"></i>Full Name
                                    </label>
                                    <input asp-for="DonorName" class="form-control form-control-lg"
                                           style="background: rgba(255,255,255,0.1); border: 2px solid rgba(255,255,255,0.2); color: #fff; border-radius: 12px; padding: 1rem;"
                                           placeholder="Enter your full name" />
                                    <span asp-validation-for="DonorName" class="text-warning small d-block mt-2"></span>
                                </div>
                            </div>

                            <!-- Email -->
                            <div class="col-md-6">
                                <div class="form-group mb-4">
                                    <label asp-for="Email" class="form-label text-light" style="font-weight: 600;">
                                        <i class="fas fa-envelope me-2 text-warning"></i>Email Address
                                    </label>
                                    <input asp-for="Email" class="form-control form-control-lg"
                                           style="background: rgba(255,255,255,0.1); border: 2px solid rgba(255,255,255,0.2); color: #fff; border-radius: 12px; padding: 1rem;"
                                           placeholder="Enter your email" />
                                    <span asp-validation-for="Email" class="text-warning small d-block mt-2"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Phone -->
                        <div class="form-group mb-4">
                            <label asp-for="Phone" class="form-label text-light" style="font-weight: 600;">
                                <i class="fas fa-phone me-2 text-warning"></i>Phone Number (Optional)
                            </label>
                            <input asp-for="Phone" class="form-control form-control-lg"
                                   style="background: rgba(255,255,255,0.1); border: 2px solid rgba(255,255,255,0.2); color: #fff; border-radius: 12px; padding: 1rem;"
                                   placeholder="Enter your phone number" />
                            <span asp-validation-for="Phone" class="text-warning small d-block mt-2"></span>
                        </div>

                        <!-- Amount -->
                        <div class="form-group mb-4">
                            <label asp-for="Amount" class="form-label text-light" style="font-weight: 600;">
                                <i class="fas fa-money-bill-wave me-2 text-warning"></i>Donation Amount (BDT)
                            </label>
                            <input asp-for="Amount" type="number" class="form-control form-control-lg"
                                   style="background: rgba(255,255,255,0.1); border: 2px solid rgba(255,255,255,0.2); color: #fff; border-radius: 12px; padding: 1rem;"
                                   placeholder="Enter amount" min="1" />
                            <span asp-validation-for="Amount" class="text-warning small d-block mt-2"></span>

                            <!-- Quick amount buttons -->
                            <div class="d-flex gap-2 mt-3 flex-wrap">
                                <button type="button" class="btn btn-outline-warning amount-btn" data-amount="100">100 BDT</button>
                                <button type="button" class="btn btn-outline-warning amount-btn" data-amount="500">500 BDT</button>
                                <button type="button" class="btn btn-outline-warning amount-btn" data-amount="1000">1000 BDT</button>
                                <button type="button" class="btn btn-outline-warning amount-btn" data-amount="5000">5000 BDT</button>
                            </div>
                        </div>

                        <!-- Payment Method -->
                        <div class="form-group mb-4">
                            <label asp-for="PaymentMethod" class="form-label text-light" style="font-weight: 600;">
                                <i class="fas fa-credit-card me-2 text-warning"></i>Payment Method
                            </label>
                            <select asp-for="PaymentMethod" class="form-select form-control-lg payment-method-select">
                                <option value="">Select payment method</option>
                                <option value="bKash">bKash</option>
                                <option value="Nagad">Nagad</option>
                                <option value="BankTransfer">Bank Transfer</option>
                                <option value="CreditCard">Credit Card</option>
                                <option value="DebitCard">Debit Card</option>
                            </select>
                            <span asp-validation-for="PaymentMethod" class="text-warning small d-block mt-2"></span>
                        </div>

                        <!-- Payment Method Specific Fields (initially hidden) -->
                        <div id="bkashFields" class="payment-method-fields" style="display: none;">
                            <div class="form-group mb-4">
                                <label asp-for="BkashNumber" class="form-label text-light" style="font-weight: 600;">
                                    <i class="fas fa-mobile-alt me-2 text-warning"></i>bKash Number
                                </label>
                                <input asp-for="BkashNumber" class="form-control form-control-lg"
                                       style="background: rgba(255,255,255,0.1); border: 2px solid rgba(255,255,255,0.2); color: #fff; border-radius: 12px; padding: 1rem;"
                                       placeholder="01XXXXXXXXX" />
                                <span asp-validation-for="BkashNumber" class="text-warning small d-block mt-2"></span>
                            </div>
                        </div>

                        <div id="nagadFields" class="payment-method-fields" style="display: none;">
                            <div class="form-group mb-4">
                                <label asp-for="NagadNumber" class="form-label text-light" style="font-weight: 600;">
                                    <i class="fas fa-mobile-alt me-2 text-warning"></i>Nagad Number
                                </label>
                                <input asp-for="NagadNumber" class="form-control form-control-lg"
                                       style="background: rgba(255,255,255,0.1); border: 2px solid rgba(255,255,255,0.2); color: #fff; border-radius: 12px; padding: 1rem;"
                                       placeholder="01XXXXXXXXX" />
                                <span asp-validation-for="NagadNumber" class="text-warning small d-block mt-2"></span>
                            </div>
                        </div>

                        <div id="bankFields" class="payment-method-fields" style="display: none;">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <label asp-for="BankName" class="form-label text-light" style="font-weight: 600;">
                                            <i class="fas fa-university me-2 text-warning"></i>Bank Name
                                        </label>
                                        <input asp-for="BankName" class="form-control form-control-lg"
                                               style="background: rgba(255,255,255,0.1); border: 2px solid rgba(255,255,255,0.2); color: #fff; border-radius: 12px; padding: 1rem;"
                                               placeholder="Bank name" />
                                        <span asp-validation-for="BankName" class="text-warning small d-block mt-2"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <label asp-for="AccountNumber" class="form-label text-light" style="font-weight: 600;">
                                            <i class="fas fa-hashtag me-2 text-warning"></i>Account Number
                                        </label>
                                        <input asp-for="AccountNumber" class="form-control form-control-lg"
                                               style="background: rgba(255,255,255,0.1); border: 2px solid rgba(255,255,255,0.2); color: #fff; border-radius: 12px; padding: 1rem;"
                                               placeholder="Account number" />
                                        <span asp-validation-for="AccountNumber" class="text-warning small d-block mt-2"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div id="cardFields" class="payment-method-fields" style="display: none;">
                            <div class="form-group mb-4">
                                <label asp-for="CardHolderName" class="form-label text-light" style="font-weight: 600;">
                                    <i class="fas fa-user me-2 text-warning"></i>Card Holder Name
                                </label>
                                <input asp-for="CardHolderName" class="form-control form-control-lg"
                                       style="background: rgba(255,255,255,0.1); border: 2px solid rgba(255,255,255,0.2); color: #fff; border-radius: 12px; padding: 1rem;"
                                       placeholder="Name on card" />
                                <span asp-validation-for="CardHolderName" class="text-warning small d-block mt-2"></span>
                            </div>

                            <div class="form-group mb-4">
                                <label asp-for="CardNumber" class="form-label text-light" style="font-weight: 600;">
                                    <i class="fas fa-credit-card me-2 text-warning"></i>Card Number
                                </label>
                                <input asp-for="CardNumber" class="form-control form-control-lg"
                                       style="background: rgba(255,255,255,0.1); border: 2px solid rgba(255,255,255,0.2); color: #fff; border-radius: 12px; padding: 1rem;"
                                       placeholder="1234 5678 9012 3456" />
                                <span asp-validation-for="CardNumber" class="text-warning small d-block mt-2"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <label asp-for="ExpiryDate" class="form-label text-light" style="font-weight: 600;">
                                            <i class="fas fa-calendar-alt me-2 text-warning"></i>Expiry Date
                                        </label>
                                        <input asp-for="ExpiryDate" class="form-control form-control-lg"
                                               style="background: rgba(255,255,255,0.1); border: 2px solid rgba(255,255,255,0.2); color: #fff; border-radius: 12px; padding: 1rem;"
                                               placeholder="MM/YY" />
                                        <span asp-validation-for="ExpiryDate" class="text-warning small d-block mt-2"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <label asp-for="CVV" class="form-label text-light" style="font-weight: 600;">
                                            <i class="fas fa-lock me-2 text-warning"></i>CVV
                                        </label>
                                        <input asp-for="CVV" class="form-control form-control-lg"
                                               style="background: rgba(255,255,255,0.1); border: 2px solid rgba(255,255,255,0.2); color: #fff; border-radius: 12px; padding: 1rem;"
                                               placeholder="123" />
                                        <span asp-validation-for="CVV" class="text-warning small d-block mt-2"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Message -->
                        <div class="form-group mb-4">
                            <label asp-for="Message" class="form-label text-light" style="font-weight: 600;">
                                <i class="fas fa-comment me-2 text-warning"></i>Message (Optional)
                            </label>
                            <textarea asp-for="Message" class="form-control form-control-lg"
                                      style="background: rgba(255,255,255,0.1); border: 2px solid rgba(255,255,255,0.2); color: #fff; border-radius: 12px; padding: 1rem;"
                                      rows="3" placeholder="Add a personal message"></textarea>
                            <span asp-validation-for="Message" class="text-warning small d-block mt-2"></span>
                        </div>

                        <!-- Anonymous Donation -->
                        <div class="form-group form-check mb-4">
                            <input asp-for="IsAnonymous" class="form-check-input"
                                   style="background: rgba(255,255,255,0.2); border-color: #ffd700;" />
                            <label asp-for="IsAnonymous" class="form-check-label text-light">Make this donation anonymous</label>
                        </div>

                        <!-- Submit Button -->
                        <div class="form-group mb-1">
                            <button type="submit" class="btn btn-success w-100 py-3"
                                    style="font-weight: 700; font-size: 1.2rem; border-radius: 50px; background: linear-gradient(45deg, #6ed15a, #4caf50); border: none; color: #000; transition: all 0.3s ease;">
                                <i class="fas fa-donate me-2"></i>Donate Now
                            </button>
                        </div>
                    </form>
                </div>

                <div class="card-footer border-0 text-center py-3"
                     style="background: rgba(255,255,255,0.1); border-radius: 0 0 20px 20px !important;">
                    <p class="text-light small mb-0" style="opacity: 0.8;">
                        <i class="fas fa-shield-alt me-1 text-warning"></i>
                        Your donation is secure and tax-deductible
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Impact Section -->
<section class="py-5" style="background-color: #f8f9fa;">
    <div class="container">
        <h2 class="text-center mb-5" style="color: #0b3d2e; font-weight: 700;">How Your Donation Helps</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="text-center">
                    <div class="rounded-circle bg-warning d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <i class="fas fa-seedling fa-2x text-dark"></i>
                    </div>
                    <h4 style="color: #0b3d2e;">Environmental Projects</h4>
                    <p>Fund tree planting, clean-up drives, and sustainability initiatives</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="text-center">
                    <div class="rounded-circle bg-warning d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <i class="fas fa-graduation-cap fa-2x text-dark"></i>
                    </div>
                    <h4 style="color: #0b3d2e;">Education Programs</h4>
                    <p>Support youth education and skill development programs</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="text-center">
                    <div class="rounded-circle bg-warning d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <i class="fas fa-hands-helping fa-2x text-dark"></i>
                    </div>
                    <h4 style="color: #0b3d2e;">Community Support</h4>
                    <p>Help vulnerable communities with essential resources</p>
                </div>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />

    <style>
        .form-control:focus, .form-select:focus {
            background: rgba(255,255,255,0.15) !important;
            border-color: #ffd700 !important;
            box-shadow: 0 0 0 0.2rem rgba(255, 215, 0, 0.25) !important;
            color: #fff !important;
        }

        .form-check-input:checked {
            background-color: #ffd700 !important;
            border-color: #ffd700 !important;
        }

        .btn-success:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(110, 209, 90, 0.4) !important;
        }

        .amount-btn {
            border-radius: 50px;
            padding: 0.5rem 1rem;
        }

            .amount-btn:hover, .amount-btn.active {
                background-color: #ffd700 !important;
                color: #000 !important;
                border-color: #ffd700 !important;
            }

        /* Make the select & its dropdown dark */
        .payment-method-select {
            background-color: rgba(255,255,255,0.1) !important;
            color: #fff !important;
            border: 2px solid rgba(255,255,255,0.2);
            border-radius: 12px;
            padding: 1rem;
        }

            .payment-method-select option {
                background-color: #000;
                color: #fff;
            }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .card-body {
                padding: 1.5rem !important;
            }

            .row > [class*="col-"] {
                margin-bottom: 1rem;
            }

            .container {
                padding: 0 1rem;
            }
        }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Quick amount buttons
            document.querySelectorAll('.amount-btn').forEach(function (button) {
                button.addEventListener('click', function () {
                    var amount = this.getAttribute('data-amount');
                    var input = document.querySelector('input[name="Amount"]');
                    if (input) input.value = amount;

                    document.querySelectorAll('.amount-btn').forEach(function (btn) {
                        btn.classList.remove('active');
                    });
                    this.classList.add('active');
                });
            });

            // Payment method specific fields
            var select = document.querySelector('.payment-method-select');
            var sections = {
                'bKash': document.getElementById('bkashFields'),
                'Nagad': document.getElementById('nagadFields'),
                'BankTransfer': document.getElementById('bankFields'),
                'CreditCard': document.getElementById('cardFields'),
                'DebitCard': document.getElementById('cardFields')
            };

            function showSection(method) {
                // Hide all
                document.querySelectorAll('.payment-method-fields').forEach(function (el) {
                    el.style.display = 'none';
                });

                // Clear inputs in hidden sections to avoid accidental posting
                Object.keys(sections).forEach(function (key) {
                    var el = sections[key];
                    if (el) {
                        el.querySelectorAll('input').forEach(function (inp) {
                            if (el.style.display === 'none') inp.value = '';
                        });
                    }
                });

                // Show selected
                var target = sections[method];
                if (target) target.style.display = 'block';
            }

            if (select) {
                select.addEventListener('change', function () {
                    showSection(this.value);
                });

                // On first load (if model has a selected value after a failed POST)
                showSection(select.value);
            }
        });
    </script>

    @* Ensure jQuery + validation bundles are included in your _Layout for client-side validation *@
}
